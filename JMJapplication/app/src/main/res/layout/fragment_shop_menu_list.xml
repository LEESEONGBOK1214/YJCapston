<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu_list2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_weight="100"
        android:background="@drawable/border_with_bright_color"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/shop_menu_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_ready"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/shop_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="메뉴 이름"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/shop_menu_img"
            android:layout_marginStart="28dp"/>

    <TextView
            android:id="@+id/shop_menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="가격"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/shop_menu_duration"
            app:layout_constraintTop_toTopOf="@+id/shop_menu_duration"
            app:layout_constraintBottom_toBottomOf="@+id/shop_menu_duration" android:layout_marginStart="40dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/shop_menu_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴설명"
            android:textSize="17sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/shop_menu_duration"
            app:layout_constraintStart_toEndOf="@+id/shop_menu_img" android:layout_marginTop="24dp"
            android:layout_marginStart="28dp"/>
    <TextView
            android:id="@+id/shop_menu_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소요시간"
            android:textSize="17sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/shop_menu_name"
            app:layout_constraintStart_toEndOf="@+id/shop_menu_img" android:layout_marginTop="28dp"
            android:layout_marginStart="28dp"/>
    <CheckBox
            android:text="품절"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:id="@+id/checkbox_soldout"
            tools:layout_editor_absoluteY="129dp"
            tools:ignore="MissingConstraints"/>
    <CheckBox
            android:text="인기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_popular"
            tools:layout_editor_absoluteY="161dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>