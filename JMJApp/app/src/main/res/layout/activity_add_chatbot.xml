<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".owner.AddChatbotActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/addchatbots_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/edge6"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/tv_addemployees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="챗봇추가"
                android:fontFamily="@font/we_semibold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="172dp"/>
    </androidx.appcompat.widget.Toolbar>
    <EditText
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="1"
            android:maxLines="3"
            android:layout_height="wrap_content"
            android:layout_width="411dp"
            android:scrollbars="vertical"
            android:id="@+id/chatbot_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/addchatbots_toolbar"
            android:layout_marginTop="64dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="1"
            android:maxLines="3"
            android:id="@+id/chatbot_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/chatbot_question" android:layout_marginTop="60dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문"
            android:textSize="25dp"
            android:id="@+id/questionTextView"
            app:layout_constraintBottom_toTopOf="@+id/chatbot_question" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변"
            android:textSize="25dp"
            android:id="@+id/answerTextView"
            app:layout_constraintBottom_toTopOf="@+id/chatbot_answer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="12dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="364dp"
            android:layout_height="40dp"
            android:id="@+id/constraintLayout16"
            app:layout_constraintTop_toBottomOf="@+id/chatbot_answer"
            android:layout_marginTop="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:text="초기화"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resetBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/submitBtn"
                android:layout_marginEnd="2dp" android:layout_marginRight="2dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="등록"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/submitBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/resetBtn"
                app:layout_constraintEnd_toStartOf="@+id/resetBtn" android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>